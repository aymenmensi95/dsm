{
  "compilerOptions": {
    "outDir": "build",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "declaration": true,
    "sourceMap": true
  },
  "exclude": [
    "dist",
    "build",
    "node_modules",
    "src/**/*.test.tsx",
    "src/**/*.stories.tsx",
    "src/**/*.d.ts",
    "src/setupTests.ts"
  ]
}
